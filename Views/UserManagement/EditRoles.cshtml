@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model List<Dishcover.Models.View.UserRolesViewModel>

@{
    ViewData["Title"] = @Localizer["Page"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Title"]</h1>

<p>@Localizer.GetString("For", new string[] { ViewBag.UserName })</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRoles">
            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="hidden" asp-for="@Model[i].RoleName" />
                <div class="form-group form-check">
                    <input class="form-check-input" asp-for="@Model[i].IsSelected" />
                    <label class="form-check-label">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <input type="submit" value='@Localizer["Save"]' class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back"]</a>
</div>

